<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_listview_layout"
    android:layout_width="match_parent"
    android:background="@drawable/border_2"
    android:layout_height="140dp">

    <TextView
        android:text="Točke"
        android:id="@+id/view_tocke_prikaz"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:textColor="#000000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="7dp" />

    <TextView
        android:id="@+id/view_starsi_pogled_textview"
        android:layout_width="230dp"
        android:layout_height="80dp"
        android:text="To je naloga"
        android:textSize="30dp"
        android:textColor="#000000"
        android:layout_above="@+id/view_tocke_prikaz"
        android:layout_alignLeft="@+id/view_tocke_prikaz"
        android:layout_alignStart="@+id/view_tocke_prikaz" />

    <ImageView
        android:id="@+id/view_starsi_pogled_opravljeno"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>