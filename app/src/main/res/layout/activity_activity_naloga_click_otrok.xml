<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_activity_naloga_click"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.andrej.homequest_2.ActivityNalogaClickOtrok">

    <TextView
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:text="Opravilo:"
        android:id="@+id/txtViewOpravilo2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner2"
        android:layout_toRightOf="@+id/txtViewOpravilo2"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="Točke"
        android:id="@+id/txtTocke2"
        android:layout_toRightOf="@+id/spinner2"
        android:textSize="17dp"
        android:layout_marginTop="10dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:ems="5"
        android:id="@+id/etTokce2"
        android:layout_toRightOf="@+id/txtTocke2"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/txtTocke2"
        android:layout_alignTop="@+id/txtTocke2" />
    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="Opis:"
        android:id="@+id/txtOpis2"
        android:layout_below="@+id/txtViewOpravilo2"
        android:textSize="15dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/etOpis2"
        android:layout_below="@+id/txtOpis2"/>

    <ImageView
        android:layout_width="240dp"
        android:layout_height="200dp"
        android:id="@+id/imgViewSlika"
        android:src="@mipmap/ic_launcher"
        android:layout_below="@+id/etOpis2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Opravi"
        android:id="@+id/btnShrani2"
        android:onClick="buttonOnClick"
        android:layout_below="@+id/etOpis2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
